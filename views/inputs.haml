<link rel="stylesheet" type="text/css" href="css/jquery.datepick.css">
<script type="text/javascript" src="js/jquery.datepick.js"></script>

%h1 Journal Data Entry

%form{:method => "POST", :action => "/"}
  %fieldset
    %legend Owner
    %label Name
    %input{:name => "name"}
    %label Subtitle
    %input{:name=>"subtitle"}


  - # Date Range
  %fieldset
    %legend Journal Date Range
    %label From
    %input{:class=>'datepicker', :name => "from_date"}
    %label To
    %input{:class=>'datepicker', :name => "to_date"}

  %fieldset
    %legend Daily Chores

    %p
      Separate chores, 1 to a line.

    %label
      Monday
      %input{:type=>:checkbox, :name=>"include_monday"}
      (include)
    %textarea{:class=>'chore_input', :name => "monday_chores"}

    %label
      Tuesday
      %input{:type=>:checkbox, :name=>"include_tuesday"}
      (include)
    %textarea{:class=>'chore_input', :name => "tuesday_chores"}

    %label
      Wednesday
      %input{:type=>:checkbox, :name=>"include_wednesday"}
      (include)
    %textarea{:class=>'chore_input', :name => "wednesday_chores"}

    %label
      Thursday
      %input{:type=>:checkbox, :name=>"include_thursday"}
      (include)
    %textarea{:class=>'chore_input', :name => "thursday_chores"}

    %label
      Friday
      %input{:type=>:checkbox, :name=>"include_friday"}
      (include)
    %textarea{:class=>'chore_input', :name => "friday_chores"}

    %label
      Saturday
      %input{:type=>:checkbox, :name=>"include_saturday"}
      (include)
    %textarea{:class=>'chore_input', :name => "saturday_chores"}

    %label
      Sunday
      %input{:type=>:checkbox, :name=>"include_sunday"}
      (include)
    %textarea{:class=>'chore_input', :name => "sunday_chores"}

  %fieldset
    %legend List of Verses (one per line)
    %p Put in references, not full verses.  We'll lookup the actual scripture verses!
    %textarea{:name => "verse_list"}
      :plain
        Jeremiah 29:11
        2 Timothy 3:16
        Romans 8:28
        Lamentations 3:22-23
        2 Corinthians 12:9
        Galatians 5:22-23
        Acts 1:8
        Matthew 11:28-30
        1 John 4:7,8
        Psalm 37:4,5
        Philippians 4:6,7
        James 1:22
        Isaiah 40:28
        Isaiah 40:30-31
        Romans 3:23
        John 3:16-17
        Romans 8:38-39
        Ephesians 2:8,9
        Ephesians 6:12
        Romans 6:23
        Isaiah 9:6
        1 Thessalonians 5:18
        Micah 6:8
        Revelation 3:20
        Philippians 4:13
        Galatians 2:20
        Psalm 119:11
        1 John 1:9
        Genesis 1:1
        Matthew 5:16
        John 14:6
        Hebrews 13:8
        Hebrews 4:16
        Psalm 19:14
        Luke 16:13
        1 Corinthians 10:13
        2 Corinthians 4:18
        James 4:7
        Matthew 25:40
        Psalm 27:1
        2 Peter 3:9
        James 5:16
        Matthew 28:19-20
        Romans 12:1-2
        2 Corinthians 5:17
        1 Corinthians 15:58
        Hebrews 12:1-2
        Proverbs 3:5,6
        Colossians 3:23
        Psalm 119:105

  %fieldset
    %legend List of Books (one per line)
    %p Each book has it's own page and an area to write a summary.
    %textarea{:name => "book_list"}

  %br
  %input{:value => "Create Journal", :type => :submit}

  :javascript
    $('.datepicker').datepick({dateFormat: 'yyyy-mm-dd'});
